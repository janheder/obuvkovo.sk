        main
            .container

                include _pagination.pug

                .product-grid
                    include _single-product-cell.pug
                    include _single-product-cell.pug
                    include _single-product-cell.pug

                    include _single-product-cell.pug
                    include _single-product-cell.pug
                    include _single-product-cell.pug

                    include _single-product-cell.pug
                    include _single-product-cell.pug
                    include _single-product-cell.pug

                include _pagination.pug

        include _news-section.pug

        include _footer.pug

        include _js-include.pug