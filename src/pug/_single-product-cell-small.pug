.single-product-cell-wrap
    a.single-product-cell(href="#")
        .single-product-cell-top

            .single-product-cell-top-img

                .product-tags
                    .product-tags__single
                        .product-tags__text.sale
                    .product-tags__single
                        .product-tags__text.new
                    .product-tags__single
                        .product-tags__text.top 
                    .product-tags__single
                        .product-tags__text.recommended

                .product-tags--right
                    .product-tags__single
                        .product-tags__text.gender.circle #[img(src=URLbase+"images/girl-icon.svg")]
                    .product-tags__single
                        .product-tags__text.gender.circle #[img(src=URLbase+"images/boy-icon.svg")]
                    .product-tags__single
                        .product-tags__text.gender.circle #[img(src=URLbase+"images/unisex-icon.svg")]
                        
                .product-tags--right-bottom
                    .product-tags__single
                        .product-tags__text.sale.circle -20%

                .single-product-cell-top-img-wrap
                    img.swiper-lazy(src=URLbase+"img/placeholder-200x200.png" data-src=URLbase+"img/product-thumb-medium.jpg" alt="#")
            h4 #{ProductName}

        .single-product-cell-bottom
        
            .single-product-cell-size-wrap
                p 20, 21, 23, 24

            .single-product-cell-price-wrap
                .single-product-cell-price
                    .single-product-cell-price-old 39.90 €
                    .single-product-cell-price-main 23.94 €

                .single-product-cell-buy
                    form(method="POST")
                        button.btn(type="submit" name="buy-button") #[span.cart-icon] Do košíku

            .single-product-cell-delivery-info
                .single-product-cell-delivery
                    p #[span Dostupnosť:] skladom


            .single-product-cell-product-info-hide
                p Výrobca: #[span Capiki]
                p Kód: #[span CAPIKI tenisky biele]